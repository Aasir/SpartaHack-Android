<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/text_margin</item>
        <item name="colorControlNormal">@color/accent</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>


    <style name="ButtonGreen" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="colorButtonNormal">@color/accent</item>
    </style>

    <style name="FloatingButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/accent</item>
    </style>

</resources>
